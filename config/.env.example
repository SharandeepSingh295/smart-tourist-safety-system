# Smart Tourist Safety System - Environment Configuration

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

NODE_ENV=development
APP_NAME=Smart Tourist Safety System
APP_VERSION=1.0.0
PORT=3000
API_VERSION=v1

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL (Primary Database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tourist_safety_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# MongoDB (Document Storage)
MONGO_URI=mongodb://localhost:27017/tourist-safety
MONGO_DB_NAME=tourist-safety

# Redis (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ==============================================================================
# AUTHENTICATION & SECURITY
# ==============================================================================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Session Configuration
SESSION_SECRET=your_session_secret_key

# ==============================================================================
# BLOCKCHAIN CONFIGURATION
# ==============================================================================

# Ethereum Network
ETHEREUM_NETWORK=localhost
ETHEREUM_RPC_URL=http://localhost:8545
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key

# Smart Contract Addresses (to be filled after deployment)
IDENTITY_CONTRACT_ADDRESS=
SAFETY_CONTRACT_ADDRESS=
TOKEN_CONTRACT_ADDRESS=

# Wallet Configuration (NEVER commit real private keys!)
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_for_development_only
OPERATOR_PRIVATE_KEY=your_operator_private_key_for_development_only

# ==============================================================================
# EXTERNAL API SERVICES
# ==============================================================================

# Google Maps & Geolocation
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# Mapbox (Alternative mapping service)
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Weather API
OPENWEATHER_API_KEY=your_openweather_api_key

# Emergency Services API
EMERGENCY_SERVICES_API_KEY=your_emergency_services_api_key
EMERGENCY_SERVICES_BASE_URL=https://api.emergency-services.com

# ==============================================================================
# AI & MACHINE LEARNING
# ==============================================================================

# TensorFlow Serving
TENSORFLOW_SERVING_URL=http://localhost:8501
MODEL_SERVER_URL=http://localhost:5000

# OpenAI API (for advanced NLP features)
OPENAI_API_KEY=your_openai_api_key

# Computer Vision API
AZURE_COMPUTER_VISION_KEY=your_azure_cv_key
AZURE_COMPUTER_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# ==============================================================================
# NOTIFICATION SERVICES
# ==============================================================================

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@tourist-safety.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# ==============================================================================
# CLOUD SERVICES
# ==============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=tourist-safety-storage

# Google Cloud Platform
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# ==============================================================================
# MONITORING & LOGGING
# ==============================================================================

# Application Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id
MIXPANEL_TOKEN=your_mixpanel_token

# ==============================================================================
# DEVELOPMENT & TESTING
# ==============================================================================

# Development Settings
DEBUG=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Testing Database
TEST_DB_NAME=tourist_safety_test_db

# Mock Services (for development)
USE_MOCK_SERVICES=true
MOCK_EMERGENCY_SERVICES=true

# ==============================================================================
# RATE LIMITING & SECURITY
# ==============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=false

# ==============================================================================
# WEBSOCKET & REAL-TIME
# ==============================================================================

# Socket.IO Configuration
SOCKET_IO_PORT=3001
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# WebRTC Configuration (for emergency video calls)
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVER=your_turn_server_url
WEBRTC_TURN_USERNAME=your_turn_username
WEBRTC_TURN_PASSWORD=your_turn_password

# ==============================================================================
# MOBILE APP CONFIGURATION
# ==============================================================================

# App Store Configuration
IOS_APP_ID=your_ios_app_id
ANDROID_PACKAGE_NAME=com.touristsafety.app

# Deep Link Configuration
DEEP_LINK_SCHEME=touristsafety
UNIVERSAL_LINK_DOMAIN=app.tourist-safety.com

# ==============================================================================
# BACKUP & DISASTER RECOVERY
# ==============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=tourist-safety-backups

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# Feature Toggles
ENABLE_BLOCKCHAIN_FEATURES=true
ENABLE_AI_INCIDENT_DETECTION=true
ENABLE_EMERGENCY_CALLING=false
ENABLE_VIDEO_MONITORING=false
ENABLE_PREDICTIVE_ANALYTICS=true